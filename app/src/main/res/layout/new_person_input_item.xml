<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/background_color">

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/personNameTV"
        android:text="Person Name"
        android:textSize="23sp"
        android:textColor="?attr/text_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/deletePersonBtn"/>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/deletePersonBtn"
        android:background="@android:color/transparent"
        android:src="@drawable/delete_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/personNameTV"
        app:tint="?attr/button_text_color" />
</androidx.constraintlayout.widget.ConstraintLayout>